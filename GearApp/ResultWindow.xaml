                <TextBlock Grid.Column="2" Grid.Row="6" Name="resC6P2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="3" Grid.Row="6" Name="resC6Pk" HorizontalAlignment="Center" VerticalAlignment="Center"/>
