                <Button Background="White" Content="Кнопка 2" Width="100" Height="30" VerticalAlignment="Center" />
                <Button Background="White" Content="Кнопка 3" Width="100" Height="30" VerticalAlignment="Center" />
            </StackPanel>-->

        </DockPanel>

