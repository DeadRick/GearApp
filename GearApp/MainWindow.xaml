<Window x:Class="GearApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GearApp"
        mc:Ignorable="d"
        Title="App Gear" Height="450" Width="800" MinHeight="450" MaxHeight="500" MinWidth="800" MaxWidth="1200">
    <Grid>

        <DockPanel Background="AntiqueWhite" Margin="34,-10,-34,10">

            <Grid DockPanel.Dock="Left" ShowGridLines="True" Width="350" Background="#FF3399CC" Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">1 цилиндр </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">2 цилиндр </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">3 цилиндр </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center">4 цилиндр </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center">5 цилиндр </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center">6 цилиндр </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="7" HorizontalAlignment="Center" VerticalAlignment="Center">7 цилиндр </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="8" HorizontalAlignment="Center" VerticalAlignment="Center">8 цилиндр </TextBlock>

                <TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center">P1</TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center">P2</TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="0" HorizontalAlignment="Center">Pk</TextBlock>

                <TextBox Grid.Column="1" Grid.Row="1" Margin="10" Name="infoC1P1"></TextBox>
                <TextBox Grid.Column="2" Grid.Row="1" Margin="10" Name="infoC1P2"></TextBox>
                <TextBox Grid.Column="3" Grid.Row="1" Margin="10" Name="infoC1Pk"></TextBox>

                <TextBox Grid.Column="1" Grid.Row="2" Margin="10" Name="infoC2P1"></TextBox>
                <TextBox Grid.Column="2" Grid.Row="2" Margin="10" Name="infoC2P2"></TextBox>
                <TextBox Grid.Column="3" Grid.Row="2" Margin="10" Name="infoC2Pk"></TextBox>

                <TextBox Grid.Column="1" Grid.Row="3" Margin="10" Name="infoC3P1"></TextBox>
                <TextBox Grid.Column="2" Grid.Row="3" Margin="10" Name="infoC3P2"></TextBox>
                <TextBox Grid.Column="3" Grid.Row="3" Margin="10" Name="infoC3Pk"></TextBox>

                <TextBox Grid.Column="1" Grid.Row="4" Margin="10" Name="infoC4P1"></TextBox>
                <TextBox Grid.Column="2" Grid.Row="4" Margin="10" Name="infoC4P2"></TextBox>
                <TextBox Grid.Column="3" Grid.Row="4" Margin="10" Name="infoC4Pk"></TextBox>

                <TextBox Grid.Column="1" Grid.Row="5" Margin="10" Name="infoC5P1"></TextBox>
                <TextBox Grid.Column="2" Grid.Row="5" Margin="10" Name="infoC5P2"></TextBox>
                <TextBox Grid.Column="3" Grid.Row="5" Margin="10" Name="infoC5Pk"></TextBox>

                <TextBox Grid.Column="1" Grid.Row="6" Margin="10" Name="infoC6P1"></TextBox>
                <TextBox Grid.Column="2" Grid.Row="6" Margin="10" Name="infoC6P2"></TextBox>
                <TextBox Grid.Column="3" Grid.Row="6" Margin="10" Name="infoC6Pk"></TextBox>

                <TextBox Grid.Column="1" Grid.Row="7" Margin="10" Name="infoC7P1"></TextBox>
                <TextBox Grid.Column="2" Grid.Row="7" Margin="10" Name="infoC7P2"></TextBox>
                <TextBox Grid.Column="3" Grid.Row="7" Margin="10" Name="infoC7Pk"></TextBox>

                <TextBox Grid.Column="1" Grid.Row="8" Margin="10" Name="infoC8P1"></TextBox>
                <TextBox Grid.Column="2" Grid.Row="8" Margin="10" Name="infoC8P2"></TextBox>
                <TextBox Grid.Column="3" Grid.Row="8" Margin="10" Name="infoC8Pk"></TextBox>

                <Button Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="9" Content="Применить" Margin="5" Click="Button_Click"/>
            </Grid>
            <Grid DockPanel.Dock="Right"  ShowGridLines="True" Width="350" Background="#FF3399CC" Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">Высота над уровнем моря, м:</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"> Температура двигателя, С:</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center">Обороты двигателя, об/мин:</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="6" HorizontalAlignment="Center" Margin="0, 20, 0, 0">Наклон переходного</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="6" HorizontalAlignment="Center" Margin="0, 35, 0, 0">устройства, град:</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="8" VerticalAlignment="Center" HorizontalAlignment="Center">Тип двигателя:</TextBlock>

                <TextBox Grid.Column="1" Grid.Row="0" Margin="20" Name="heightSea"/>
                <TextBox Grid.Column="1" Grid.Row="2" Margin="20" Name="engineTemp"/>
                <TextBox Grid.Column="1" Grid.Row="4" Margin="20" Name="engineSpeed"/>
                <ComboBox Grid.Column="1" Grid.Row="6" Margin="20" Name="angle">
                    <TextBlock>0</TextBlock>
                    <TextBlock>15</TextBlock>
                    <TextBlock>30</TextBlock>
                    <TextBlock>45</TextBlock>
                </ComboBox>
                <ComboBox Grid.Column="1" Grid.Row="8" Margin="20" Name="engineType">
                    <TextBlock>Бензиновый</TextBlock>
                    <TextBlock>Дизельный</TextBlock>
                </ComboBox>


            </Grid>
            
